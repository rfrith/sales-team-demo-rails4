<table class="flat-table flat-table-3">
  <thead>
    <tr>
      <th>Sales Group</th>
			<th>Sales Rep</th>
    </tr>
  </thead>

  <tbody>
    <% @sales_groups.each do |sales_group| %>
      <tr>
        <td><%= sales_group.unique_id %></td>
        <td>
			    <% sales_group.sales_reps.each do |sales_rep| %>
				    <%= sales_rep.last_name + ", " + sales_rep.first_name %><br/>
					<% end %>
				</td>
			</tr>
    <% end %>
  </tbody>
</table>